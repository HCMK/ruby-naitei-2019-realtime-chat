<aside class="main-sidebar vh-100 scroll">
  <section class="sidebar h-100">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "",class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <%= current_user.name %>
        <a href="#"><i class="fa fa-circle text-success"></i>
          <%= t ".online" %>
        </a>
      </div>
    </div>
    <ul class="sidebar-menu" data-widget="tree">
      <% current_user.join_rooms.each do |join| %>
        <li class="select_room" value="<%= join.room.id %>">
          <%= link_to join.room do %>
            <img src="" class="img-circle" style="width: 30px" alt="">
            <span><%= join.room.name %></span>
            <% if join.room.room_type == Settings.room.type.public_room %>
              <i class="fa fa-users pull-right"></i>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </section>
</aside>
